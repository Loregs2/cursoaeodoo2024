<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sport_issue_view_tree" model="ir.ui.view">
        <field name="name">sport_issue.view.tree</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" string="Issues">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="date" optional="show"/>
                <field name="user_id" optional="hide"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="sport_issue_view_form" model="ir.ui.view">
        <field name="name">sport_issue.view.form</field>
        <field name="model">sport.issue</field>
        <field name="arch" type="xml">
            <form string="Issues">
                <header>
                    <field options="{'clickable':1}" name="state" widget='statusbar'/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Issues name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="assistance"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                        <page name="solution" string="Solution">
                            <field name="solution"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>